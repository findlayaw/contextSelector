{
  "ui": {
    "colors": {
      "selected": "green",
      "highlight": "blue",
      "directory": "yellow",
      "file": "white"
    },
    "symbols": {
      "expandedDirectory": "▼",
      "collapsedDirectory": "▶",
      "file": "  ",
      "selected": "✓"
    }
  },
  "formatting": {
    "useMarkdown": true,
    "includeDirectoryTree": true,
    "useSeparators": true
  },
  "gitignore": {
    "respect": true,
    "additionalIgnores": [
      "node_modules",
      ".git",
      "dist",
      "build"
    ]
  },
  "templates": {
    "enabled": true,
    "location": "~/.context-selector/templates"
  }
}
